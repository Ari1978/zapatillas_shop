<h1 class="mb-4 text-center">Editar Usuario</h1>

<div class="card shadow-sm p-4 mx-auto" style="max-width: 600px;">
  <form action="/admin/users/edit/{{user.id}}" method="POST">

    <!-- Nombre -->
    <div class="mb-3">
      <label for="first_name" class="form-label">Nombre</label>
      <input
        type="text"
        id="first_name"
        name="first_name"
        value="{{user.first_name}}"
        class="form-control"
        required
      >
    </div>

    <!-- Apellido -->
    <div class="mb-3">
      <label for="last_name" class="form-label">Apellido</label>
      <input
        type="text"
        id="last_name"
        name="last_name"
        value="{{user.last_name}}"
        class="form-control"
        required
      >
    </div>

    <!-- Edad -->
    <div class="mb-3">
      <label for="age" class="form-label">Edad</label>
      <input
        type="number"
        id="age"
        name="age"
        value="{{user.age}}"
        class="form-control"
        required
      >
    </div>

    <!-- Email (readonly) -->
    <div class="mb-3">
      <label for="email" class="form-label">Email</label>
      <input
        type="email"
        id="email"
        name="email"
        value="{{user.email}}"
        class="form-control"
        readonly
      >
    </div>

    <!-- Rol -->
    <div class="mb-3">
      <label for="role" class="form-label">Rol</label>
      <select id="role" name="role" class="form-select">
        <option value="user" {{#if (eq user.role "user")}}selected{{/if}}>Usuario</option>
        <option value="admin" {{#if (eq user.role "admin")}}selected{{/if}}>Administrador</option>
      </select>
    </div>

    <!-- Botones -->
    <div class="text-center">
      <button type="submit" class="btn btn-success me-2">Guardar Cambios</button>
      <a href="/admin/users" class="btn btn-secondary">Cancelar</a>
    </div>

  </form>
</div>
