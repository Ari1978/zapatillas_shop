<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{{title}}</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/shop.css">

  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</head>
<body>
  <div class="container my-4">
    <h1>{{title}}</h1>
    <div class="d-flex justify-content-between align-items-center mb-4">
      {{#unless user}}
        <a href="/views/users/login" class="btn btn-primary">Ingresar para comprar</a>
      {{else}}
        <span class="fw-bold me-3">Hola, {{user.first_name}}</span>
        <a href="/api/sessions/logout" class="btn btn-danger">Cerrar sesiÃ³n</a>
      {{/unless}}
      <a href="/carts/cart" id="cart-btn" class="btn btn-outline-primary position-relative">
        ðŸ›’ Carrito
        <span id="cart-count" class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">0</span>
      </a>
    </div>

    <div class="row" id="realtime-products">
      {{#if products.length}}
        {{#each products}}
          <div class="col-md-4 mb-3 product-card">
            <div class="card h-100 shadow-sm">
              <img src="{{this.image}}" class="card-img-top" alt="{{this.title}}">
              <div class="card-body d-flex flex-column">
                <h5 class="card-title">{{this.title}}</h5>
                <p class="card-text text-truncate">{{this.description}}</p>
                <p><strong>Precio:</strong> ${{this.price}}</p>
                <p><strong>Stock:</strong> {{this.stock}}</p>
                <p><strong>CategorÃ­a:</strong> {{this.category}}</p>

                {{#if ../user}}
                  <div class="d-flex align-items-center mb-2 mt-auto">
                    <label for="quantity-{{this._id}}" class="me-2 fw-bold">Cantidad:</label>
                    <input type="number" id="quantity-{{this._id}}" class="form-control quantity-input" style="width:70px;" min="1" max="{{this.stock}}" value="1">
                  </div>
                  <button class="btn btn-primary add-to-cart-btn mt-2" data-id="{{this._id}}">Agregar al carrito</button>
                {{/if}}
              </div>
            </div>
          </div>
        {{/each}}
      {{else}}
        <p>No hay productos disponibles.</p>
      {{/if}}
    </div>
  </div>

  <script>
    window.userLogged = {{#if user}}true{{else}}false{{/if}};
    window.jwtToken = "{{jwtToken}}";

    
    document.addEventListener("DOMContentLoaded", () => {
      const cartBtn = document.getElementById("cart-btn");

      cartBtn.addEventListener("click", (e) => {
        if (!window.userLogged) {
          e.preventDefault();
          Swal.fire({
            title: "Debes iniciar sesiÃ³n",
            text: "Para ver tu carrito, primero inicia sesiÃ³n.",
            icon: "warning",
            confirmButtonText: "Ir al login",
            confirmButtonColor: "#0d6efd"
          }).then((result) => {
            if (result.isConfirmed) {
              window.location.href = "/views/users/login";
            }
          });
        }
      });
    });
  </script>

  <script src="/js/shop.js"></script>
</body>
</html>
