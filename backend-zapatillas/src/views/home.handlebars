<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{{title}}</title>

    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />

    <link rel="stylesheet" href="/css/home.css" />
  </head>
  <body>
    <div class="container my-4">

      <div class="text-center mb-4">
        <h1>{{title}}</h1>
      </div>
      <div style="text-align: right;">
        <a href="/vistas/shop" id="btnVolver" class="btn btn-secondary">Ir a Shop</a>
      </div>

      <div
        class="d-flex justify-content-between align-items-center mb-4 flex-wrap"
      >
        {{#unless user}}
          <div>
            <a href="/views/users/login" class="btn btn-primary">Ingresar para comprar</a>
          </div>
        {{else}}
          <div class="d-flex align-items-center flex-wrap">
            <span class="fw-bold me-3">Hola, {{user.first_name}}</span>
            <a href="/api/sessions/logout" class="btn btn-danger">Cerrar sesión</a>
          </div>
        {{/unless}}

      </div>

      <div class="row" id="home-products">
        {{#if products.length}}
          {{#each products}}
            <div class="col-md-4 mb-3 product-card" data-id="{{this._id}}">
              <div class="card h-100 shadow-sm">
                <img
                  src="{{this.image}}"
                  class="card-img-top"
                  alt="{{this.title}}"
                />
                <div class="card-body d-flex flex-column">
                  <h5 class="card-title">{{this.title}}</h5>
                  <p class="card-text text-truncate">{{this.description}}</p>
                  <p><strong>Precio:</strong> ${{this.price}}</p>
                  <p><strong>Stock:</strong> {{this.stock}}</p>
                  <p><strong>Categoría:</strong> {{this.category}}</p>
                </div>
              </div>
            </div>
          {{/each}}
        {{else}}
          <p class="text-center">No hay productos disponibles.</p>
        {{/if}}
      </div>
    </div>

    <footer class="bg-dark text-white text-center py-3 mt-5">
      &copy;
      {{year}}
      ZapatillasShop. Todos los derechos reservados.
    </footer>

    <script>
      window.userLogged =
      {{#if user}}true{{else}}false{{/if}};
    </script>
  </body>
</html>