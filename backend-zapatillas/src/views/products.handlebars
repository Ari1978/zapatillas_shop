<div class="container my-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1>{{title}}</h1>

    {{#unless user}}
      <div>
        <a href="/login" class="btn btn-primary">Ingresar para comprar</a>
      </div>
    {{else}}
      <div>
        <span class="fw-bold me-3">Hola, {{user.first_name}}</span>
        <a href="/api/sessions/logout" class="btn btn-danger">Cerrar sesión</a>
        <button id="purchaseBtn" class="btn btn-warning ms-3">Comprar productos del carrito</button>
      </div>
    {{/unless}}
  </div>

  <div class="row" id="realtime-products">
    {{#if products.length}}
      {{#each products}}
        <div class="col-md-4 mb-3 product-card" data-id="{{this._id}}">
          <div class="card h-100 shadow-sm">
            <img src="{{this.image}}" class="card-img-top" alt="{{this.title}}">
            <div class="card-body d-flex flex-column">
              <h5 class="card-title">{{this.title}}</h5>
              <p class="card-text text-truncate">{{this.description}}</p>
              <p class="card-text"><strong>Precio:</strong> ${{this.price}}</p>
              <p class="card-text"><strong>Stock:</strong> {{this.stock}}</p>
              <p class="card-text"><strong>Categoría:</strong> {{this.category}}</p>

              {{#if ../user}}
                <div class="d-flex align-items-center mb-2 mt-auto">
                  <label for="quantity-{{this._id}}" class="me-2 fw-bold">Cantidad:</label>
                  <input type="number"
                         id="quantity-{{this._id}}"
                         class="form-control quantity-input"
                         style="width: 70px;"
                         min="1"
                         max="{{this.stock}}"
                         value="1">
                </div>
                <button class="btn btn-primary add-to-cart-btn mt-2"
                        data-id="{{this._id}}"
                        data-stock="{{this.stock}}">
                  Agregar al carrito
                </button>
              {{/if}}
            </div>
          </div>
        </div>
      {{/each}}
    {{else}}
      <p>No hay productos disponibles.</p>
    {{/if}}
  </div>
</div>


