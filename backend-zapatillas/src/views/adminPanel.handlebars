<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Panel de Administración - Zapatillas Shop</title>

    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />

    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css"
      rel="stylesheet"
    />

    <link rel="stylesheet" href="/css/admin.css" />
  </head>

  <body>
    <div class="d-flex">
      <aside class="sidebar p-3 vh-100 d-flex flex-column">
        <h4 class="text-center mb-4">
          <i class="bi bi-person-circle"></i>
          Perfil
        </h4>

        <ul class="nav flex-column">
          <li class="nav-item mb-2">
            <a href="/admin/users" class="nav-link active">
              <i class="bi bi-people"></i>
              Gestión de Usuarios
            </a>
          </li>
          <li class="nav-item mb-2">
            <a href="/realTimeProducts" class="nav-link">
              <i class="bi bi-bag"></i>
              Gestión de Productos
            </a>
          </li>
        </ul>
        <br />
        <br />
        <br />
        <br />
        <a href="/api/sessions/logout" class="btn btn-danger">Cerrar sesión</a>
        <br />
        <br />
        <button class="btn btn-outline-light btn-sm" onclick="history.back()">
          <i class="bi bi-arrow-left"></i>
          Volver
        </button>

      </aside>

      <main class="flex-grow-1 p-4">
        <h2 class="fw-bold mb-4">Gestión de Usuarios</h2>

        {{#if users.length}}
          <div class="table-responsive shadow-sm rounded bg-white p-3">
            <table class="table table-striped align-middle">
              <thead>
                <tr>
                  <th>Nombre</th>
                  <th>Email</th>
                  <th>Rol</th>
                  <th>Fecha de registro</th>
                  <th class="text-center">Acciones</th>
                </tr>
              </thead>
              <tbody>
                {{#each users}}
                  <tr>
                    <td>{{this.first_name}} {{this.last_name}}</td>
                    <td>{{this.email}}</td>
                    <td>{{this.role}}</td>
                    <td>{{formatDate this.createdAt}}</td>
                    <td class="text-center">
                      <a
                        href="/admin/users/edit/{{this._id}}"
                        class="btn btn-sm btn-outline-primary me-2"
                      >
                        <i class="bi bi-pencil"></i>
                        Editar
                      </a>
                      <form
                        action="/admin/users/delete/{{this._id}}"
                        method="POST"
                        class="d-inline"
                      >
                        <button
                          type="submit"
                          class="btn btn-sm btn-outline-danger"
                        >
                          <i class="bi bi-trash"></i>
                          Eliminar
                        </button>
                      </form>
                    </td>
                  </tr>
                {{/each}}
              </tbody>
            </table>
          </div>
        {{else}}
          <div class="alert alert-info text-center mt-4">No hay usuarios
            registrados aún.</div>
        {{/if}}
      </main>
    </div>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
    ></script>
  </body>
</html>